--
--  This file controls compilation of AUnit (which generates lots of
--  style warnings with -gnaty).

with "Options";

project AUnit is

  Top := external ("TOP");
  AUnit := external ("AUNIT", "aunit-1.01");

  for Source_Dirs use (Top & "/" & AUnit & "/aunit/**");

  for Object_Dir use Options'Object_Dir & "/aunit";
  package Ide renames Options.Ide;
  package Builder renames Options.Builder;

  package Compiler is
     for Default_Switches ("Ada") use ("-gnatqQaf", "-O2");
  end Compiler;

  package Binder renames Options.Binder;
  package Linker renames Options.Linker;

end AUnit;
