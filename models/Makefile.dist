# This Makefile is used for distribution generation.

# DIST is the location where distribution files are to be copied, eg
# /Users/simon/coldframe/cf-20110731hg

all:
	@echo "Only meant to be called from the parent Makefile.dist."

include ../Makefile.inc

# For test only
DIST ?= ./dist

DATE = $(subst cf-,,$(notdir $(DIST)))

EXAMPLES = ColdFrame_Examples.uml

TESTS = ColdFrame_Tests.uml			\
  Regressions.uml 				\
  Bad_Code_Regressions.uml 			\
  Bad_Model_Regressions.uml

MISC = ColdFrame_Development.uml

ALL = ColdFrameProfile.uml $(EXAMPLES) $(TESTS) $(MISC)

dist:
	-$(RM) -rf $(DIST)/models
	$(MKDIR) -p $(DIST)/models
	$(CP) -p $(ALL) $(DIST)/models/

.PHONY: all dist
