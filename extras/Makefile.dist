all:
	@echo "Only meant to be called from the parent Makefile.dist."

DATE = $(subst cf-,,$(notdir $(DIST)))

ALL =                                           \
coldframe-logging_event_basis-ews_support.adb   \
coldframe-logging_event_basis-ews_support.ads

dist:
	-$(RM) -rf $(DIST)/extras
	$(MKDIR) -p $(DIST)/extras
	$(CP) -p $(ALL) $(DIST)/extras/

.PHONY: dist force
