# Makefile for use under Linux (or other Unixes, of course).

GENERATE_ACCESSORS = no

TOP = /usr/local

CF = $(TOP)/cf-DATE

AWK = awk
ITCLSH = /usr/bin/itclsh3.1
TCLXML = ~/TclXML-1.2

SAXON = java com.icl.saxon.StyleSheet

ESCAPE_MARKUP_SCRIPT = $(CF)/escape-markup.awk
NORMALIZE_ROSE_SCRIPT = $(CF)/normalize-rose.tcl
HTMLGEN_SCRIPT = $(CF)/generate-html.xsl
CODEGEN_SCRIPT = $(CF)/generate-ada.xsl

%.norm: %.raw
	$(AWK) -f $(ESCAPE_MARKUP_SCRIPT) <$< | \
	TCLLIBPATH=$(TCLXML) $(ITCLSH) $(NORMALIZE_ROSE_SCRIPT) >$@ || rm -f $@

%.html: %.norm
	$(SAXON) $< $(HTMLGEN_SCRIPT) >$@ || rm -f $@

%.ada: %.norm
	$(SAXON) $< $(CODEGEN_SCRIPT) \
	  generate-accessors=$(GENERATE_ACCESSORS) >$@  \
	  || (echo "Generation problem." && rm -f $@)

%.gen: %.ada
	-mkdir $@
	rm -f $@/*.ad[bs]
	gnatchop $< $@
	chmod a=r $@/*.ad[bs]

.PHONY: force

