with "Options";
with "BC";
with "ColdFrame";

project Callback_Manager_Test is

   for Main use ("callback_manager_test.adb");
   for Source_Dirs use ("Callback_Manager.test");

   for Exec_Dir use ".";

   for Object_Dir use Options'Object_Dir & "/main";

   package Builder is
      for Default_Switches ("Ada") use ("-m", "-g");
   end Builder;

   package Compiler is
      for Default_Switches ("Ada") use
        (
         "-gnatqQafoy",
         "-gnatwaL",
         "-gnat95",
         "-O2"
        );
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-E");
   end Binder;

end Callback_Manager_Test;
