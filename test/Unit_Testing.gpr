with "ColdFrame";
with "Options";
with "aunit";

project Unit_Testing is

  for Main use ("unit_testing-harness");

  for Exec_Dir use ".";

  for Source_Dirs use
    (
     "Unit_Testing.gen",
     "Unit_Testing.impl",
     "Unit_Testing.test"
    );

  for Object_Dir use ".build";
  package IDE renames Options.IDE;
  package Builder renames Options.Builder;
  package Compiler renames Options.Compiler;
  package Binder renames Options.Binder;
  package Linker renames Options.Linker;

end Unit_Testing;
